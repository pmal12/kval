  <div class="input-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 6, class: "form-control" %>
  </div>
  </fieldset>
  <fieldset class="form-group">
  <div class="input-group">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>
  </fieldset>
  <fieldset class="form-group">
  <div class="input-group">
    <%= f.label :price %><br>
