	
		<% cache ['store', Product.latest] do %> 
		  
			  <% cache ['flex-item', product] do %>
				
				  <li class="flex-item">
				    <%= image_tag product.image.url, class: "img-rounded" %>
				    <h4><%= product.title %></h4>
				    <span class="price"><%= number_to_currency(product.price) %></span>
				    <div id="add-button"><%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true, class: "btn btn-sm btn-success" %></div>
				    
				  </li>
				
			  <% end %>
			  
		  
		<% end %>