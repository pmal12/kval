<div class="container">
<% if @notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="row" id="show-row">
	<div class="col-md-6">
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><strong>Product with id:<%= @product.id %></strong></div>
<ul class="list-group">
<li class="list-group-item">
  <strong>Title:</strong>
  <%= @product.title %>
</li>

<li class="list-group-item">
  <strong>Description:</strong>
  <%= @product.description %>
</li>

<li class="list-group-item">
  <strong>Image url:</strong>
  <%= @product.image_url %>
</li>

<li class="list-group-item">
  <strong>Price:</strong>
  <%= @product.price %>
</li>
</ul>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
</div>
</div>